<% content_for :title, "External posts" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">External posts</h1>
  <%= link_to "New external post", new_external_post_path, class: "btn btn--primary" %>
</div>

<div id="external_posts" class="flex flex-col" style="gap: 2rem;">
  <% @external_posts.each do |external_post| %>
    <div class="flex flex-col items-start gap">
      <%= render external_post %>
      <%= link_to "Show this external post", external_post, class: "btn" %>
    </div>
  <% end %>
</div>
