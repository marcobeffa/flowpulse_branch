<%= form_with(model: branch, data: { turbo_frame: "branch_children_#{parent.id}" }, class:"flex") do |f| %>
  <%= f.hidden_field :parent_id, value: parent.id %>
  <% if params[:new_children] == "true" %>
    <%= f.hidden_field :label, value: false %>
  <% elsif params[:new_children_label] == "true" %>
    <%= f.hidden_field :label, value: true %>
  <% end %>
  <%= f.text_field :slug, placeholder: "Nuovo figlio..." %>
  <%= f.submit "Aggiungi", class:"btn" %>
<% end %>
