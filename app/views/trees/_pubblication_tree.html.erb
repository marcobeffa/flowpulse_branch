        <%= f.label :visibility, nil, class: "sr-only" %>
        <%= f.select :visibility,
          Branch.visibilities.keys.map { |v| [t("activerecord.attributes.branch.visibility.#{v}"), v] },
          {}, { onchange: "this.form.requestSubmit()", class: "select" } %>
      </div>
    <% end %>
  <% end %>
</div>
