  <!-- PUBLISHED -->
  <%= turbo_frame_tag "branch_published_#{branch.id}" do %>
    <%= form_with url: branch_path(branch), method: :patch,
      scope: :branch,
      data: { turbo_frame: "branch_published_#{branch.id}" } do |f| %>
