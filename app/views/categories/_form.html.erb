<%= form_with(model: category, html: { contents: true }) do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul class="text-sm mis-3" style="list-style: disc">
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :icon_solo_emoji, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :icon, class: "input" %>
  </div>
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :description, class: "text-sm font-medium leading-none" %>
    <%= form.textarea :description, class: "input" %>
  </div>
  <div class="inline-flex items-center mbs-2 mie-1">
    <%= form.submit class: "btn btn--primary" %>
  </div>
<% end %>
