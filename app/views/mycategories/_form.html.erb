<%= form_with(model: mycategory, html: { contents: true }) do |form| %>
  <% if mycategory.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(mycategory.errors.count, "error") %> prohibited this mycategory from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% mycategory.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :user_id, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :user_id, class: "input" %>
  </div>



  <div class="flex flex-col items-start gap-half mbe-4">
  <%= form.label :category_id, "Categoria", class: "text-sm font-medium leading-none" %>
  <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: "Seleziona una categoria" },  class: " p-2 border rounded bg-white text-black appearance-none cursor-pointer" %>

</div>


 

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>

   <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :icon, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :icon, class: "input" %>
  </div>

  

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :description, class: "text-sm font-medium leading-none" %>
    <%= form.textarea :description, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :public, class: "text-sm font-medium leading-none" %>
    <%= form.checkbox :public, class: "checkbox" %>
  </div>

  <div class="inline-flex items-center mbs-2 mie-1">
    <%= form.submit class: "btn btn--primary" %>
  </div>
<% end %>
